{
    "manifest_version": 2,
    "name": "STUDIO User Agent Switcher",
    "version": "1.0",
    "description": "app.studio.design でのみ User Agent を Chrome に偽装する拡張機能",
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "*://app.studio.design/*"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": true
    },
    "icons": {
        "16": "icons/icon-16.png",
        "32": "icons/icon-32.png",
        "48": "icons/icon-48.png",
        "96": "icons/icon-96.png"
    }
}